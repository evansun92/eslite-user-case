<div class="container">
  <h1>Products</h1>
  <%= link_to 'New product', '#new_product', data: { toggle: 'modal' }, class: 'btn btn-info m-2' %>
  <table class="table table-condensed">
    <thead>
      <tr class="text-center">
        <th>SKU</th>
        <th>Name</th>
        <th>Status</th>
        <th>Updated at</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody id='products'>
      <%= render @products %>
    </tbody>
  </table>
</div>

<%= render 'admin/products/product_form', id: 'new_product',
    action: Product.new, url: admin_products_path, title: 'New product' %>

<div id='edit-container'></div>

<div id='show-container'></div>