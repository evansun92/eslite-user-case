<%= stylesheet_link_tag 'products' %>

<div class="container">
	<div class="card-deck" >
	<% @products.each do |product| %>
	  <div class="card">
	    <div class="card-body">
	      <div class="card-img">
	        <%= image(product) %>
	      </div>
	      <h5 class="card-title"><%= product.name %></h5>
	      <p class="card-text">
	        <strong>price: </strong>
	        <del><%= product.original_price %></del>
          <span class="text-success"><%= product.price %></span>
	      </p>
	      <p class="card-text"></p>
	      <a href="<%= admin_product_path(product) %>" data-remote="true" class="btn btn-primary">Detail</a>
	    </div>
	  </div>
	<% end %>
	</div>
</div>

<div id='show-container'></div>